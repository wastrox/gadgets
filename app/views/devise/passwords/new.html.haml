.modal.fade
  .modal-dialog.custom
    .modal-content
      .modal-header
        / <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&amp;times;</button>
        %h3.modal-title Forgot your password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal login" }) do |f|
        - unless alert.blank?
          .alert.alert-danger
            %span.glyphicon.glyphicon-remove-circle
            = alert
        .modal-body
          / <p class="notice"><haml:loud> notice </haml:loud></p>
          .form-group
            = f.label :email, class: "col-sm-2 control-label"
            .col-sm-10
              = f.text_field :email, autofocus: true, class: "form-control"
          .modal-footer
            %div{:style => "float: left"}= render "devise/shared/links"
            .form-group
              .col-sm-offset-2.col-sm-10
                = f.submit "Send me reset password instructions", class: "btn btn-primary"
    / /.modal-content
  / /.modal-dialog
/ /.modal
:javascript
  $('.modal').modal({
      backdrop: 'static',
      keyboard: true
  });
