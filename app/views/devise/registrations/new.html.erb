<div class="modal fade">
  <div class="modal-dialog custom">
    <div class="modal-content">
      <div class="modal-header">
        <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button> -->
        <h3 class="modal-title">Sign up</h3>
      </div>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal login" }) do |f| %>
          <% unless devise_error_messages!.blank? %><div class="alert alert-danger"><%= devise_error_messages! %></div><% end %>

        <div class="modal-body">
          <!-- <p class="notice"><%= notice %></p> -->
          <div class="form-group">
            <%= f.label :email, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%= f.text_field :email, autofocus: true, class: "form-control"%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Password confirmation", class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>


          <div class="modal-footer">
           <div style="float: left">
 Existing user? <%= link_to "Sign in", new_session_path(resource_name), class: "btn-sm btn-success" %><br />
           </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
          </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script type="text/javascript">
  $('.modal').modal({
    backdrop: 'static',
    keyboard: true
});
</script>