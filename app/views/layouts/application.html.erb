<!DOCTYPE html>
<html>
<head>
  <title>Gadgets</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div role="navigation" class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button data-target="navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
            <span class="sr-only">Toggle navigation</span>
          </button>
          <a href="/" class="navbar-brand">Welcome!</a>
        </div>
        <div class="collapse navbar-collapse">
          <%= content_tag :ul, class: "nav navbar-nav" do -%>
            <%= content_tag :li, ( link_to "My Gadgets", gadgets_url ), class: active("gadgets") %>
          <% end -%>
          <% if current_user -%>
          <p class="navbar-text navbar-right">
          		<%= i "profile" %>
	          	<%= current_user.email %>&nbsp;  
				<%= link_to raw("<span class='glyphicon glyphicon-log-out'></span> Logout"), destroy_user_session_path, method: :delete %>
		  </p>
		  <% end %>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </div>
			
	<div class="container admin-container">
    <div class="row row-offcanvas row-offcanvas-right">
    	<div>
      	<% if flash.any? %>
      		<% if flash[:notice] %><%=bs_alert(:warning, "flash-notice", flash[:notice])%><% end %>
      		<% if flash[:error] %><%=bs_alert(:danger, "flash-error", flash[:error])%><% end %>
      	<% end %>
      	</div>
      	<%= yield %>
      </div>	
      <div class="col-xs-6 col-sm-3 sidebar-module sidebar-module-inset">
        <%# render "layouts/msg_helper" %>
      </div>
    </div><!--/row-->
	</div>
	<div id="overlay"><div id="loading"></div></div>
</body>
</html>
